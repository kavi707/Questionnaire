<?xml version="1.0" encoding="utf-8"?>
<com.android.kavi.questionnaire.views.GamesListItem
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:text="Contestant"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:typeface="normal"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_vertical"
            android:id="@+id/contestantNameTextView"/>

        <TextView
            android:text="Game Status"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:typeface="normal"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:id="@+id/gameStatusTextView"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/contestantNameTextView" />

    </RelativeLayout>
</com.android.kavi.questionnaire.views.GamesListItem>